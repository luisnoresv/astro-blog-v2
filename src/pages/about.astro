---
export const prerender = true;

import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

import ContentCreatorCard from "@components/ContentCreatorCard.astro";
import TeamCard from "@components/TeamCard.astro";
import MainLayout from "@layouts/MainLayout.astro";

import about from "@images/about.jpg";
import { ABOUT_TITLE } from "@lib/constants";

const authors: CollectionEntry<"team">[] = await getCollection("team");
---

<MainLayout title={ABOUT_TITLE}>
  <h1 class="text-4xl font-bold mb-5">About TechPeople</h1>
  <div
    class="flex flex-col md:flex-row items-center justify-between gap-6 mt-10"
  >
    <div class="w-full md:w-1/2 mb-8 md:mb-0">
      <Image
        src={about}
        alt="Tech People Team"
        class="w-full h-auto rounded-lg shadow-lg"
        fetchpriority={"high"}
        format="avif"
      />
    </div>
    <div class="w-full md:w-1/2">
      <h2 class="text-3xl font-extrabold text-gray-900 mb-4">Who We Are</h2>
      <p class="text-gray-700 leading-relaxed mb-6">
        We are Tech People, a passionate team of tech enthusiasts dedicated to
        bringing you the latest news, articles, and tutorials on all things
        technology.
      </p>
      <p class="text-gray-700 leading-relaxed mb-6">
        Our mission is to empower and educate our readers, helping them stay
        up-to-date with the rapidly evolving world of technology. Whether you're
        a seasoned developer, a gadget enthusiast, or just curious about the
        latest tech trends, we've got you covered.
      </p>
    </div>
  </div>

  <!-- Team -->
  <div class="mt-20">
    <h2 class="text-3xl font-extrabold text-gray-900 mb-8 text-center">
      Our Team
    </h2>
    <article class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      {
        authors
          .filter((author) => author.data.hierarchy < 4)
          .sort(
            (author, nextAuthor) =>
              author.data.hierarchy - nextAuthor.data.hierarchy,
          )
          .map((author) => <TeamCard author={author} />)
      }
    </article>
  </div>
  <div class="mt-20">
    <article class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      {
        authors
          .filter((author) => author.data.hierarchy === 4)
          .map((author) => <ContentCreatorCard author={author} />)
      }
    </article>
  </div>
</MainLayout>
