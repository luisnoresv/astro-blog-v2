---
import MainLayout from "@layouts/MainLayout.astro";
import { Feedback, db } from "astro:db";

const feedback = await db.select().from(Feedback);
---

<MainLayout title="Feedback">
  <h1 class="text-4xl font-bold mb-5">Feedback from our beloved Community</h1>
  <li>
    {feedback.map(({ author, body, postedDate }) => <ul>{body}</ul>)}
  </li>
</MainLayout>
