---
import Tags from "@components/Tags.astro";
import { formatDate } from "@lib/utils";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

interface Props {
  article: CollectionEntry<"blog">;
}

const { article } = Astro.props;

const { author } = article.data;

const authorInformation = await getEntry("team", author.id);
---

<section class="max-w-md mx-auto mt-10">
  <article class="bg-white rounded-lg overflow-hidden shadow-lg">
    <a href={`/articles/${article.slug}`}>
      <img
        src={`/images/${article.data.image}`}
        alt="Article Image"
        class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
      />
    </a>
    <section class="p-6">
      <h2 class="text-2xl font-semibold mb-2">
        <a href={`/articles/${article.slug}`}> {article.data.title} </a>
      </h2>
      <p class="text-gray-600 text-xs mb-4">
        Written by <a href={`/team/${author.id}`} class="hover:text-purple-500"
          ><strong> {authorInformation.data.name}</strong></a
        > - {formatDate(article.data.pubDate)}
      </p>
      <Tags tags={article.data.tags} />
    </section>
  </article>
</section>
